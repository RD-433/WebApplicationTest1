@model Article

@{
    ViewData["Title"] = "EditArticle";
}
<form asp-controller="Home" asp-action="UpdateArticle" method="post">
    <div class="form-group">
        <label for="Name">Article Name</label>
        <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Name">
    </div>
    <div class="form-group">
        <label for="Text">Text</label>
        <textarea class="form-control" id="Text" asp-for="Text" rows="10">@Model.Text</textarea>
    </div>
    <input type="hidden" id="Id" asp-for="Id" value="@Model.Id" />
    <input type="hidden" id="CategoryId" asp-for="CategoryId" value="@Model.CategoryId" />
    <button type="submit" class="btn btn-primary" name="Save" value="Save">Save</button>
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
    <button type="submit" class="btn btn-warning" name="Delete" value="Delete">Delete</button>
</form>
